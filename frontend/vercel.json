{
  "buildCommand": "npm install -g pnpm@10.14.0 && pnpm install --frozen-lockfile && pnpm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "echo 'Installation handled by build command'",
  "functions": {
    "**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "20.19.4"
    }
  }
}
